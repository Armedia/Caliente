<?xml version="1.0" encoding="UTF-8"?>
<stores xmlns="http://www.armedia.com/ns/cmf/stores"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.armedia.com/ns/cmf/stores http://www.armedia.com/ns/cmf/stores">
	<settings>
		<setting name="tmpdir">${user.dir}/cmf</setting>
	</settings>

	<objectstore id="dctmTest">
		<name>jdbc</name>
		<settings>
			<setting name="location.type">pooled</setting>
			<setting name="jdbc.url">jdbc:h2:${tmpdir}/metadata;AUTO_SERVER=TRUE;MODE=PostgreSQL;PAGE_SIZE=4096</setting>
			<setting name="jdbc.driver">org.h2.Driver</setting>
		</settings>
	</objectstore>

	<contentstore id="dctmTest">
		<name>local</name>
		<settings>
			<setting name="base.dir">${tmpdir}/content</setting>
			<setting name="uri.strategy">documentum</setting>
		</settings>
	</contentstore>
</stores>