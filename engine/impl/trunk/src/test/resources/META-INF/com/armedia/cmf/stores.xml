<?xml version="1.0" encoding="UTF-8"?>
<stores xmlns="http://www.armedia.com/ns/cmf/stores"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.armedia.com/ns/cmf/stores http://www.armedia.com/ns/cmf/stores">
	<objectstore id="dctmTest">
		<className>com.armedia.cmf.storage.jdbc.JdbcObjectStore</className>
		<settings>
			<setting name="location.type">pooled</setting>
			<setting name="jdbc.url">jdbc:h2:mem:cmsmf;MODE=PostgreSQL</setting>
			<setting name="jdbc.driver">org.h2.Driver</setting>
		</settings>
	</objectstore>
	<contentstore id="dctmTest">
		<className>com.armedia.cmf.storage.jdbc.JdbcObjectStore</className>
		<settings>
			<setting name="content.path">${user.dir}/cmf</setting>
		</settings>
	</contentstore>
</stores>