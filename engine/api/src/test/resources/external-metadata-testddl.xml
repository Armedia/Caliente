<?xml version="1.1" encoding="UTF-8"?>
<external-metadata xmlns="http://www.armedia.com/ns/caliente/engine" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.armedia.com/ns/caliente/engine platform:/resource/caliente-engine/src/main/resources/engine.xsd">
	<dataSource name="default">
		<setting name="jdbc.driver">org.h2.Driver</setting>
		<setting name="jdbc.url">jdbc:h2:${h2.test.path};AUTO_SERVER=TRUE;MODE=PostgreSQL;PAGE_SIZE=4096</setting>
	</dataSource>
	<metadataSet id="primary" failOnError="true" failOnMissing="false">
		<from-ddl dataSource="default">
			<query>
				<sql>select * from cmf_object where object_id = ${objectId}</sql>
				<parameter>
					<name>objectId</name>
					<value lang="jexl">`{0${obj.type.ordinal()}-${obj.id}}`</value>
				</parameter>
			</query>

			<ignore-columns>tier_id</ignore-columns>
			<transform-names>
				<map>
					<from>object_id</from>
					<to>cmis:objectId</to>
				</map>
				<map>
					<from>object_number</from>
					<to>cmf:objectIndexWithinExport</to>
				</map>
				<map>
					<from>search_key</from>
					<to>cmf:someSearchKey</to>
				</map>
				<default lang="jexl">`cmf:${sqlName}`</default>
			</transform-names>
		</from-ddl>
	</metadataSet>
</external-metadata>