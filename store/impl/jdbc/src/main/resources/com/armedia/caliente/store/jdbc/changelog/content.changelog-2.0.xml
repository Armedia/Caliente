<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

	<changeSet author="caliente-content" id="2000">
		<!-- The CMF content info table -->
		<createTable tableName="cmf_content_info">
			<column name="name" type="varchar(64)" remarks="The name of the property being stored">
				<constraints nullable="false" />
			</column>
			<column name="data_type" type="varchar(32)" remarks="The property's data type">
				<constraints nullable="false" />
			</column>
			<column name="value" type="text" remarks="The property's value">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addPrimaryKey tableName="cmf_content_info" columnNames="name" />

		<!-- The content streams -->
		<createTable tableName="cmf_content_stream">
			<column name="object_id" type="varchar(96)" remarks="The object whose content this is">
				<constraints nullable="false" />
			</column>
			<column name="rendition_id" type="varchar(64)" remarks="The content's rendition identifier">
				<constraints nullable="false" />
			</column>
			<column name="rendition_page" type="number" remarks="The content's rendition page number">
				<constraints nullable="false" />
			</column>
			<column name="modifier" type="varchar(16)" remarks="The content's rendition modifier">
				<constraints nullable="false" />
			</column>
			<column name="length" type="bigint" remarks="The content stream's length">
				<constraints nullable="false" />
			</column>
			<column name="data" type="blob" remarks="The actual data stream">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addPrimaryKey tableName="cmf_content_stream" columnNames="object_id, rendition_id, rendition_page, modifier" />
	</changeSet>
</databaseChangeLog>