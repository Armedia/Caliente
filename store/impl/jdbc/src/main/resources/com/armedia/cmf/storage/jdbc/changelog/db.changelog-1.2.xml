<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet author="cmf" id="1003">
		<validCheckSum>any</validCheckSum>
		<preConditions onFail="CONTINUE">
			<changeSetExecuted id="1002" author="cmf" changeLogFile="com/armedia/cmf/storage/jdbc/changelog/db.changelog-1.1.xml"/>
		</preConditions>

		<dropDefaultValue tableName="cmf_export_plan" columnName="traversed" columnDataType="boolean" />
		<dropIndex tableName="cmf_export_plan" indexName="idx_cmf_export_plan" />
		<dropColumn tableName="cmf_export_plan" columnName="traversed" />
		<addColumn tableName="cmf_export_plan">
			<column name="result" type="varchar(64)" remarks="The outcome of the storage operation">
				<constraints nullable="true" />
			</column>
		</addColumn>
		<sql dbms="h2">
			update cmf_export_plan p
			   set p.result = (
					  select 'STORED'
						from cmf_object o
					   where p.object_id = o.object_id
				   )
		</sql>
		<sql dbms="postgresql">
			update cmf_export_plan
			   set result = 'STORED'
			  from cmf_object o
			 where cmf_export_plan.object_id = o.object_id
		</sql>
		<sql>
			update cmf_export_plan
			   set result = 'FAILED'
			 where result is null
		</sql>
	</changeSet>
</databaseChangeLog>
