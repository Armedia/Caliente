<?xml version="1.0" encoding="UTF-8"?>
<stores xmlns="http://www.armedia.com/ns/caliente/stores"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.armedia.com/ns/caliente/stores http://www.armedia.com/ns/caliente/stores">
	<settings>
		<setting name="target">${user.dir}/caliente</setting>
		<setting name="dir.metadata">${target}</setting>
		<setting name="dir.content">${target}/content</setting>
		<setting name="dir.content.strategy">caliente</setting>
	</settings>

	<objectstore id="default">
		<type>jdbc</type>
		<settings>
			<setting name="location.type">pooled</setting>
			<setting name="jdbc.url">jdbc:h2:${dir.metadata}/${db.name};AUTO_SERVER=TRUE;MODE=PostgreSQL;PAGE_SIZE=4096;TRACE_LEVEL_FILE=4</setting>
			<setting name="jdbc.driver">org.h2.Driver</setting>
		</settings>
	</objectstore>

	<contentstore id="default">
		<type>local</type>
		<settings>
			<setting name="base.dir">${dir.content}</setting>
			<setting name="uri.strategy">${dir.content.strategy}</setting>
			<setting name="force.safe.filenames">false</setting>
			<setting name="safe.filename.encoding">UTF-8</setting>
			<setting name="fix.filenames">true</setting>
			<setting name="fail.on.collisions">false</setting>
			<setting name="ignore.extra.filename.info">false</setting>
			<setting name="use.windows.fix">true</setting>
		</settings>
	</contentstore>

	<contentstore id="jdbc">
		<type>jdbc</type>
		<settings>
			<setting name="location.type">pooled</setting>
			<setting name="jdbc.url">jdbc:h2:${dir.metadata}/${db.name};AUTO_SERVER=TRUE;MODE=PostgreSQL;PAGE_SIZE=4096;TRACE_LEVEL_FILE=4</setting>
			<setting name="jdbc.driver">org.h2.Driver</setting>
		</settings>
	</contentstore>

	<contentstore id="direct">
		<type>local</type>
		<settings>
			<setting name="base.dir">${dir.content}</setting>
			<setting name="uri.strategy">localfs</setting>
			<setting name="force.safe.filenames">false</setting>
			<setting name="safe.filename.encoding">UTF-8</setting>
			<setting name="fix.filenames">true</setting>
			<setting name="use.windows.fix">true</setting>
			<setting name="fail.on.collisions">false</setting>
			<setting name="ignore.descriptor">true</setting>
		</settings>
	</contentstore>
</stores>
