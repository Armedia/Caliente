<?xml version="1.1" encoding="UTF-8"?>
<transformations xmlns="http://www.armedia.com/ns/caliente/engine/transformations" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.armedia.com/ns/caliente/engine/transformations platform:/resource/caliente-engine/src/main/resources/transformations.xsd">

	<transformation>
		<if>
			<is-type>FOLDER</is-type>
		</if>

		<set-attribute>
			<name>object_name</name>
			<value lang="jexl">obj.name.toUpperCase()</value>
		</set-attribute>
	</transformation>

	<transformation>
		<if>
			<is-type>DOCUMENT</is-type>
		</if>

		<set-attribute>
			<name>object_name</name>
			<value lang="jexl">obj.name.toLowerCase()</value>
		</set-attribute>
	</transformation>
</transformations>