<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss,SSS z}  [%t]: %-5p %m%n"/>
		</layout>
	</appender>

	<logger name="com.armedia.caliente.cli.history">
		<level value="DEBUG"/>
	</logger>

	<root>
		<level value="INFO"/>
		<appender-ref ref="stdout"/>
	</root>
</log4j:configuration>
