<?xml version="1.0" encoding="UTF-8"?>
<stores xmlns="http://www.armedia.com/ns/cmf/stores"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.armedia.com/ns/cmf/stores http://www.armedia.com/ns/cmf/stores">
	<settings>
		<setting name="target">${user.dir}/cmsmf</setting>
		<setting name="dir.metadata">${target}</setting>
		<setting name="dir.content">${target}/content</setting>
		<setting name="dir.content.strategy">cmsmf</setting>
	</settings>

	<objectstore id="jdbc">
		<name>jdbc</name>
		<settings>
			<setting name="location.type">pooled</setting>
			<setting name="jdbc.url">jdbc:h2:${dir.metadata}/cmsmf-data;AUTO_SERVER=TRUE;MODE=PostgreSQL;PAGE_SIZE=4096</setting>
			<setting name="jdbc.driver">org.h2.Driver</setting>
			<!--
			PostgreSQL:
			<setting name="jdbc.url">jdbc:postgresql://${postgres.host}:${postgres.port}/${postrges.db}</setting>
			<setting name="jdbc.driver">org.postgresql.Driver</setting>
			<setting name="jdbc.user">cmsmf</setting>
			<setting name="jdbc.password">cmsmf</setting>
			-->
			<!--
			Oracle:
			<setting name="jdbc.url">jdbc:oracle:thin:@${oracle.host}:${oracle.port}/${oracle.sid}</setting>
			<setting name="jdbc.driver">oracle.jdbc.OracleDriver</setting>
			<setting name="jdbc.user">cmsmf</setting>
			<setting name="jdbc.password">cmsmf</setting>
			-->
		</settings>
	</objectstore>

	<contentstore id="local">
		<name>local</name>
		<settings>
			<setting name="base.dir">${dir.content}</setting>
			<setting name="uri.strategy">${dir.content.strategy}</setting>
			<setting name="force.safe.filenames">false</setting>
			<setting name="safe.filename.encoding">UTF-8</setting>
			<setting name="fix.filenames">true</setting>
			<setting name="fail.on.collisions">false</setting>
			<setting name="ignore.extra.filename.info">true</setting>
			<setting name="use.windows.fix">true</setting>
		</settings>
	</contentstore>

	<contentstore id="jdbc">
		<name>jdbc</name>
		<settings>
			<setting name="location.type">pooled</setting>
			<setting name="jdbc.url">jdbc:h2:${dir.metadata}/cmsmf-data;AUTO_SERVER=TRUE;MODE=PostgreSQL;PAGE_SIZE=4096</setting>
			<setting name="jdbc.driver">org.h2.Driver</setting>
			<!--
			PostgreSQL:
			<setting name="jdbc.url">jdbc:postgresql://${postgres.host}:${postgres.port}/${postrges.db}</setting>
			<setting name="jdbc.driver">org.postgresql.Driver</setting>
			<setting name="jdbc.user">cmsmf</setting>
			<setting name="jdbc.password">cmsmf</setting>
			-->
		</settings>
	</contentstore>

	<contentstore id="direct">
		<name>local</name>
		<settings>
			<setting name="base.dir">${dir.content}</setting>
			<setting name="uri.strategy">localfs</setting>
			<setting name="force.safe.filenames">false</setting>
			<setting name="safe.filename.encoding">UTF-8</setting>
			<setting name="fix.filenames">true</setting>
			<setting name="use.windows.fix">true</setting>
			<setting name="fail.on.collisions">false</setting>
			<setting name="ignore.extra.filename.info">true</setting>
		</settings>
	</contentstore>
</stores>